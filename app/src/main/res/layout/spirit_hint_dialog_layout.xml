<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/card_bg_shape"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hint_tv"
            android:textSize="18sp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/mainBackgroundColor"
            android:text="在开始这个魔术之前，你必须先设置你的手机号（仅一次），这个魔术最终会将你的手机号展示出来，而观赏这个魔术的人并不知道你事先设置了手机号，在下面输入你的手机号并保存吧~"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/ic_mark"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/phone_et"
                    android:background="@color/transparent"
                    android:textColor="@color/mainBackgroundColor"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:hint="输入你的手机号"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <View
                    android:background="@color/mainBackgroundColor"
                    android:layout_width="match_parent"
                    android:layout_height="3px"/>

            </LinearLayout>

            <ImageView
                android:src="@mipmap/ic_mark"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/save_btn"
                android:background="@drawable/ok_btn_selector"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="保存"
                android:layout_width="100dp"
                android:layout_height="45dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>