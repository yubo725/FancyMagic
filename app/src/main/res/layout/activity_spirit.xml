<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:background="@color/mainBackgroundColor"
    tools:context="com.magic.fancymagic.activity.SpiritActivity">

    <com.magic.fancymagic.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.magic.fancymagic.view.NumberView
        android:id="@+id/number_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/hint_text"
        android:padding="10dp"
        android:textSize="18sp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp" >

        <Button
            android:id="@+id/start_btn"
            android:textColor="@color/mainBackgroundColor"
            android:textSize="30sp"
            android:text="开始\n答题"
            android:background="@drawable/circle_btn_selector"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <com.magic.fancymagic.view.QuestionView
            android:id="@+id/question_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.magic.fancymagic.view.NumberView
        android:id="@+id/number_view_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
